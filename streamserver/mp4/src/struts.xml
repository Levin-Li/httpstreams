<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<!-- struts2 常用拦截器参见： http://blog.csdn.net/superboo/article/details/4964397 -->
<struts>

	<!-- Some or all of these can be flipped to true for debugging -->
	<constant name="struts.i18n.reload" value="false" />
	<constant name="struts.custom.i18n.resources" value="application"></constant>
	<constant name="struts.enable.DynamicMethodInvocation" value="true" />

	<constant name="struts.devMode" value="true" />
	<constant name="struts.configuration.xml.reload" value="true" />
	<constant name="struts.custom.i18n.resources" value="globalMessages" />
	<constant name="struts.action.extension" value="action,do,html" />


	<!-- sms -->
	<package name="sms" extends="json-default" namespace="/sms">
		<action name="login" class="sms.ClientLoginAction">
			<result name="success">
				/sms/test.jsp
			</result>
		</action>
		<action name="getMessage" class="sms.GetMessageAction">
			<interceptor-ref name="json" /><!--处理以JSON文本提交的请求 -->
			<result type="json">
				<param name="root">msgs</param>
			</result>
		</action>
	</package>
	<!-- meet -->
	<package name="meet" extends="json-default" namespace="/meet">
		<action name="sphj" class="meet.GotoMeetingAction">
			<result name="success">
				/sphj/sphj.jsp
			</result>
		</action>
	</package>

	<!-- 信访线索管理 -->
	<package name="xfxs" extends="json-default" namespace="/">

		<action name="index" class="xfxs.IndexAction">
			<interceptor-ref name="json" /><!--处理以JSON文本提交的请求 -->

			<result name="success">
				/xfxs/index.jsp
			</result>
		</action>

		<action name="makeAppoint" class="xfxs.MakeAppointAction">
			<interceptor-ref name="json" /><!--处理以JSON文本提交的请求 -->
			<interceptor-ref name="params" /><!-- form 表单自动填充到 action 
				中 -->

			<result type="json" name="success">
				<param name="root">result</param>
			</result>
		</action>

		<action name="appointState" class="xfxs.AppointStateQueryAction">
			<interceptor-ref name="json" /><!--处理以JSON文本提交的请求 -->
			<interceptor-ref name="params" /><!-- form 表单自动填充到 action 
				中 -->

			<result type="json" name="success">
				<param name="root">result</param>
			</result>
		</action>

		<action name="appointLogin" class="xfxs.AppointCodeLoginAction">
			<interceptor-ref name="json" /><!--处理以JSON文本提交的请求 -->
			<interceptor-ref name="params" /><!-- form 表单自动填充到 action 
				中 -->

			<result type="json" name="success">
				<param name="root">result</param>
			</result>
		</action>

	</package>

	<package name="auth"  extends="json-default"  namespace="/auth">
		<action name="login" class="auth.AuthCodeLoginAction">
			<result type="json" name="success">
				<param name="root">result</param>
			</result>
		</action>
	</package>
</struts>

<!-- END SNIPPET: xworkSample -->

